@model BookStore.Models.Author

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/book/edit.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

<h4></h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label">שם הסופר</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="BirthDate" class="control-label">תאריך לידה</label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DeathDate" class="control-label">תאריך פטירה</label>
                    <input asp-for="DeathDate" class="form-control" />
                    <span asp-validation-for="DeathDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Description" class="control-label">קורות חיים</label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>



    <div class="form-row">
        <div class="form-group">
            <input type="submit" value="הוסף" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <a class="backToList" asp-action="Index">חזור לרשימת הסופרים</a>
        </div>
    </div>



</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
