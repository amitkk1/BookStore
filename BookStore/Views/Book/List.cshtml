@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "List";
}

<link rel="stylesheet" href="~/css/book/list.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
@section Scripts
{
    <script src="~/js/book/list.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"</script>
}
<h1 class="navbar-title-text">הספרים שלנו</h1>


<tbody>
    <div class="container">
        <select onchange="genreFilter(this.value)" id="GenreId" style="width:150px">
            <option>זאנר</option>
        </select>
        <select onchange="ageFilter(this.value)" id="AgeCategoryId" style="width:150px">
            <option>קבוצת גיל</option>
        </select>

        <form asp-action="List" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="genreFilter" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="List">Back to Full List</a>
                </p>
            </div>
        </form>

        <div id="someDiv">fri</div>
        @Html.Partial("listPartial", Model);





    </div>

</tbody>








