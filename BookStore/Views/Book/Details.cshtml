@model BookStore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    
    
        <div class="container">
            <div class="card ">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">  @Html.DisplayFor(model => model.Name)</h5>
                            <p class="card-text">@Html.DisplayFor(model => model.Author.Name) מחבר:</p>
                            <p class="card-text">@Html.DisplayFor(model => model.Price) מחיר:</p>
                            <p class="card-text">@Html.DisplayFor(model => model.NumberOfPages) מס עמודים:</p>
                            <p class="card-text">@Html.DisplayFor(model => model.PublishDate) תאריך הוצאה לאור:</p>
                            <p class="card-text"><small class="text-muted">@Html.DisplayFor(model => model.Description)</small></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="https://s3-eu-west-1.amazonaws.com/simania-public-assets/bookimages/covers95/957733.jpg" class="img-fluid rounded-start" alt="...">
                    </div>

                </div>
            </div>
        </div>
        
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


