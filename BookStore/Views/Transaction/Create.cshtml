@model BookStore.Models.Transaction

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/book/edit.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">

<h4></h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Customer" class="control-label">לקוח</label>
                    <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID">
                        <option value="">-- בחר לקוח --</option>
                    </select>
                    <span asp-validation-for="CustomerID" class="text-danger" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DateOfPurchase" class="control-label">תאריך ביצוע ההזמנה</label>
                    <input asp-for="DateOfPurchase" class="form-control" />
                    <span asp-validation-for="DateOfPurchase" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Price" class="control-label">סך ההזמנה</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Status" class="control-label">סטטוס</label>
                    <select asp-for="StatusID" class="form-control" asp-items="ViewBag.StatusID">
                        <option value="">-- בחר ז'אנר --</option>
                    </select>
                    <span asp-validation-for="StatusID" class="text-danger" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PickupLocation" class="control-label">מיקום איסוף</label>
                    <select asp-for="PickupLocationID" class="form-control" asp-items="ViewBag.PickupLocationID">
                        <option value="">-- בחר מיקום --</option>
                    </select>
                    <span asp-validation-for="PickupLocationID" class="text-danger" />
                </div>
            </div>
        </div>
    </div>




    <div class="form-row">
        <div class="form-group">
            <input type="submit" value="הוסף" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <a class="backToList" asp-action="Index">חזור לרשימת ההזמנות</a>
        </div>
    </div>



</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
