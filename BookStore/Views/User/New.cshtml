
@{
    ViewData["Title"] = "New";
}

<section class="vh-100 gradient-custom">
    <div class="container py-4 h-30">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white login-card-border">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-1">

                            <h2 class="fw-bold mb-2 text-uppercase">משתמש חדש</h2>
                            <p class="text-white-50 mb-5">אנא מלא את כל הפרטים הנדרשים</p>
                            <form method="POST">
                                <div class="row d-flex align-content-between">
                                    <div class="form-outline form-white mb-2 col-6">
                                        <input type="text" id="typeFirstName" class="form-control form-control-lg" name="firstName" />
                                        <label class="form-label">שם פרטי</label>
                                    </div>
                                    <div class="form-outline form-white mb-2 col-6">
                                        <input type="text" id="typeLastName" class="form-control form-control-lg" name="lastName" />
                                        <label class="form-label">שם משפחה</label>
                                    </div>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input type="email" id="typeEmailX" class="form-control form-control-lg" name="email" />
                                    <label class="form-label" for="typeEmailX">אי-מייל</label>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input type="text" id="typePhone" class="form-control form-control-lg" name="email" />
                                    <label class="form-label" for="typeEmailX">מספר טלפון</label>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input type="password" id="typePasswordX" class="form-control form-control-lg" name="password" />
                                    <label class="form-label" for="typePasswordX">סיסמה</label>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input type="url" id="typePicture" class="form-control form-control-lg" name="picture" />
                                    <label class="form-label">קישור לתמונה</label>
                                </div>
                                <button class="btn btn-outline-light submit-button btn-lg px-5" type="submit">צור משתמש</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

