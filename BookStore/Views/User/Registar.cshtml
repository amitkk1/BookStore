@model BookStore.Models.User

@{
    ViewData["Title"] = "Registar";
}

<section class="vh-100 gradient-custom">
    <div class="container py-4 h-30">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white login-card-border">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-1">

                            <h2 class="fw-bold mb-2 text-uppercase">משתמש חדש</h2>
                            <p class="text-white-50 mb-5">אנא מלא את כל הפרטים הנדרשים</p>
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row d-flex align-content-between">
                                    <div class="form-outline form-white mb-2 col-6">
                                        <input asp-for="FirstName" type="text" id="typeFirstName" class="form-control form-control-lg" size="15"
                                               pattern="[A-Za-z]{1,15}" required />
                                        <label asp-for="FirstName" class="form-label">שם פרטי</label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline form-white mb-2 col-6">
                                        <input asp-for="LastName" type="text" id="typeLastName" class="form-control form-control-lg" size="15"
                                               pattern="[A-Za-z]{1,15}" required />
                                        <label asp-for="LastName" class="form-label">שם משפחה</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input asp-for="Email" type="email" id="typeEmailX" class="form-control form-control-lg" required />
                                    <label asp-for="Email" class="form-label" for="typeEmailX">אי-מייל</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input asp-for="PhoneNumber" type="text" id="typePhone" class="form-control form-control-lg" size="10"
                                           placeholder="000-0000000" pattern="[0-9]{3}-[0-9]{7}" required>
                                    <label asp-for="PhoneNumber" class="form-label" for="typeEmailX">מספר טלפון</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input asp-for="EncryptedPassword" type="password" id="typePasswordX" class="form-control form-control-lg" name="password" required />
                                    <label asp-for="EncryptedPassword" class="form-label" for="typePasswordX">סיסמה</label>
                                    <span asp-validation-for="EncryptedPassword" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <input type="url" id="typePicture" class="form-control form-control-lg" name="picture" />
                                    <label class="form-label">קישור לתמונה</label>
                                </div>
                                <button class="btn btn-outline-light submit-button btn-lg px-5" asp-action="Register" type="submit">צור משתמש</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

